generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  priceCents  Int?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive, sortOrder])
  @@index([category])
}
